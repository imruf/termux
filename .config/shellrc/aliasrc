#!/bin/sh

command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d"

# EDITOR
alias \
 v="$EDITOR" \
 q="exit" \

# tmux
alias \
 t="tmux" \
 tl="tmux ls" \
 ta0="tmux attach-session -t 0" \
 ta="tmux attach-session -t" \

# termux-api
alias \
 tb="termux-brightness" \
 tba="termux-brightness auto" \
 tbl="termux-brightness 25" \
 tbh="termux-brightness 100" \
 to="termux-open" \

## Files
# Operation
alias \
 ls="ls --color=auto --group-directories-first" \
 lah="exa -la --color=auto --group-directories-first" \
 ..="cd .." \
 cp="cp -v" \
 mv="mv -v" \
 rm="rm -v" \
 rm1="rm -v 1*" \
 mkd="mkdir -pv" \

# Navigation
alias \
 ru="cd $PREFIX" \
 re="cd $PREFIX/etc/" \
 rb="cd $PREFIX/bin/" \
 rs="cd $PREFIX/share/" \
 ddl="cd /data/data/com.termux/files/home/storage/downloads/" \
 dn="cd /data/data/com.termux/files/home/storage/documents/" \
 dsd="cd /data/data/com.termux/files/home/storage/shared/" \
 dtui="cd /data/data/com.termux/files/home/storage/shared/t-ui" \
 dtmp="cd /data/data/com.termux/files/home/tmp" \
 dcc="cd /data/data/com.termux/files/home/.cache" \
 dcf="cd /data/data/com.termux/files/home/.config" \
 dcfz="cd /data/data/com.termux/files/home/.config/zsh" \
 dcfs="cd /data/data/com.termux/files/home/.config/shellrc" \
 dcfw="cd /data/data/com.termux/files/home/.config/vimwiki" \
 dcfk="cd /data/data/com.termux/files/home/.config/vimwiki/keep" \
 dls="cd /data/data/com.termux/files/home/.local/share" \
 dlb="cd /data/data/com.termux/files/home/.local/bin" \
 dlbs="cd /data/data/com.termux/files/home/.local/bin/scripts" \
 dh="cd /data/data/com.termux/files/home" \
 ddt="cd /data/data/com.termux/files/home/termux" \
 fv="$EDITOR ~/.config/nvim/init.vim" \
 fz="$EDITOR ~/.config/zsh/.zshrc" \
 fa="$EDITOR ~/.config/shellrc/aliasrc" \
 fzz="$EDITOR ~/.config/shellrc/zshfnrc" \
 fzp="$EDITOR ~/.profile" \

# db
alias \
 updb="updatedb" \

## Info
alias \
 pdw="pwd" \
 free="free -mt" \
 diff="diff --color=auto" \
 df="df -h" \
 grep="grep --color=auto" \
 egrep="egrep --color=auto" \
 fgrep="fgrep --color=auto" \

## Package
# APT
alias \
 up="apt update && apt upgrade" \
 inp="apt install" \
 rmv="apt remove" \
 armv="apt autoremove" \
 pacs="apt search" \

# c source
alias \
    cinp="sudo make install" \
    crmv="sudo make uninstall" \

# Python/pip
alias \
 pipup="pip-review -i" \
 pipinp="pip install -U" \
 pip3inp="pip3 install" \
 piprmv="pip uninstall" \

# MAIL/mutt-wizard
alias \
 ibx="mutt" \
 mail="mw -Y; mutt" \
 mp="mw -y mparvz@gmail.com; mutt" \
 ib="mw -y imrufbd@gmail.com; mutt" \
 rry="mw -y riponridwan@yahoo.com; mutt" \
 lic="mw -y riprid@cock.li; mutt" \

# pass
alias \
 gpc="pass -c" \

# Game/SolVitaire
# alias doku="nudoku‚Äù
alias \
 tet="tetris" \
 frcl="cd ~/games/sol; ./freecell; cd" \
 sol="cd ~/games/sol; ./sol; cd" \
 spider="cd ~/games/sol; ./spider; cd" \

## Network
# IP/PING
alias \
 pn="ping -c 3 google.com" \
 myip="ifconfig" \
 isp="curl ifconfig.co" \

# SSH #http #ftpu busybox script
alias \
 sfu="sshd" \
 sfd="pkill sshd" \
 httpu="python3 ~/.local/bin/scripts/shsu.py" \

# zsh function
# fzf/surfraw
alias \
 e="fzf_file" \
 f="fzf_cd" \
 h="fzf_history" \
 k="fzf_kill" \
 s="fzf_sr" \
 bm="fzf_srbr" \

# Services/ More at chubin/awesome-console-servies
alias \
 ispc="curl ifconfig.co/country" \
 ispct="curl ifconfig.co/city" \
 geo="curl ip-api.com" \
 lsu="ttm_url_shorten" \
 weather="curl wttr.in/khagrachari" \
 odic="online_dic" \
 oman="online_man" \

## Downloader
# wget/aria2
alias \
 wget="wget -c" \
 a2="aria2c" \
 a2p="aria2p" \
 a2s="a2pd start" \
 a2d="a2pd stop" \

# youtube-dl
alias \
 ytd-aac="youtube-dl --extract-audio --audio-format aac" \
 ytd-besta="youtube-dl --extract-audio --audio-format best" \
 ytd-flac="youtube-dl --extract-audio --audio-format flac" \
 ytd-m4a="youtube-dl --extract-audio --audio-format m4a" \
 ytd-mp3="youtube-dl --extract-audio --audio-format mp3" \
 ytd-opus="youtube-dl --extract-audio --audio-format opus" \
 ytd-vorbis="youtube-dl --extract-audio --audio-format vorbis" \
 ytd-wav="youtube-dl --extract-audio --audio-format wav" \
 ytd-best="youtube-dl -f bestvideo+bestaudio" \
 ytd="youtube-dl" \
 ytdF="youtube-dl -F" \
 ytdf="youtube-dl -f" \
 ytdic="youtube-dl --ignore-config" \
 ytv="youtube-viewer -C" \
 ytm="ytfzf -m" \

# TRANSMISSION
alias \
 pfx="peerflix -k -f /home/masud/Videos/ptfx" \
 tfx="torrentflix" \

# MIS
alias \
 math="mathomatic" \
 pc="python -ic 'from __future__ import division; from math import *; from random import *'" \
 c2="units" \
 sw="termdown" \
 rt="tuir" \
 el="elinks" \
 m="cmus" \
 def="sdcv" \
 keep="keepcli" \
 eq="pnglatex -b Transparent -p amssymb:amsmath -d 300 -s 12 -o eq.png" \

# GIT
alias \
 gitc="git clone" \
 gitu="git push -u origin main" \
 gitca="git commit -a" \
 gita="git add" \
 gits="git status" \
